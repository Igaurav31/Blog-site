<%- include("partials/header"); -%>
<h1>Edit Post</h1>

<form class="" action="/compose/update/<%= post._id %>" method="post">
  <div class="form-group">
    <label>Title</label>
    <input class="form-control" type="text" name="postTitle" value="<%= post.postTitle %>">
    <label>Post</label>
    <textarea class="form-control" name="postBody" rows="5" cols="30"><%= post.postBody %></textarea>
  </div>
  <button class="btn btn-primary" type="submit" name="button">Update</button>
</form>

<%- include("partials/footer"); -%>
